\RequirePackage[most]{tcolorbox}
\RequirePackage{xcolor}

% Stile minimale con bordo arrotondato e sfondo colorato
\tcbset{
  boxrule=0pt,        % nessun bordo visibile
  frame hidden,       % NASCONDE il bordo (corretto!)
  arc=1mm,
  left=1mm,
  right=1mm,
  top=1mm,
  bottom=1mm,
  enhanced,
}


% Box Accorgimento (giallo tenue)
\newtcolorbox{accorgimentoBox}{
  colback=green!8,
  coltext=black,
  arc=1mm,
  fontupper=\small,
}

% Box Perché (viola tenue)
\newtcolorbox{percheBox}{
  colback=violet!10,
  coltext=black,
  arc=1mm,
  fontupper=\small,
}

% Box Criticità (rosso tenue, come prima)
\newtcolorbox{criticitaBox}{
  colback=red!10,
  coltext=black,
  arc=1mm,
  fontupper=\small,
}

\newtcolorbox{notaBox}{
  colback=gray!10,
  coltext=black,
  arc=1mm,
  fontupper=\small,
}

% Personalizzo il trattino nei bullet
\renewcommand{\labelitemi}{–}

\newenvironment{noSplitBlock}
  {\par\vspace{1em}\noindent\begin{minipage}{0.9\textwidth}}
  {\end{minipage}\par}

\newcommand{\twoColumnLayout}[4]{
  \noindent
  \begin{minipage}{0.45\textwidth}
  \textbf{#1}
  \begin{itemize}\footnotesize
  #2
  \end{itemize}
  \end{minipage}
  \hfill
  \begin{minipage}{0.45\textwidth}
  \textbf{#3}
  \begin{itemize}\footnotesize
  #4
  \end{itemize}
  \end{minipage}
}